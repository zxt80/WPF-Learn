                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Grid>
                                        <StackPanel Margin="10">
                                            <DockPanel LastChildFill="False">
                                                <TextBlock
                                                    Margin="0,10"
                                                    FontSize="20"
                                                    FontWeight="Bold"
                                                    Text="{Binding Title}" />
                                                <materialDesign:PopupBox
                                                    Panel.ZIndex="1"
                                                    DockPanel.Dock="Right"
                                                    PlacementMode="BottomAndAlignRightEdges"
                                                    StaysOpen="False">
                                                    <Button Content="删除" />
                                                </materialDesign:PopupBox>
                                            </DockPanel>

                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding Content}" />
                                        </StackPanel>

                                        <Canvas ClipToBounds="True">
                                            <Border
                                                Canvas.Top="10"
                                                Canvas.Right="-50"
                                                Width="120"
                                                Height="120"
                                                Background="#FFFFFF"
                                                CornerRadius="60"
